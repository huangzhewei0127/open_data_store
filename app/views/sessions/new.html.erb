<div class="container jumbotron text-center">
  <div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
      <h1>Login</h1><br><br>

      <%= form_with scope: :user, url: login_path do |form| %>
        <label> Email: </label><br><%= form.email_field :email, class: "form-control" %><br>
        <label> Password: </label><br><%= form.password_field :password, class: "form-control" %><br><br>
        <%= form.submit "Login", data: { disable_with: "Login..." }, class: "btn btn-primary" %>
        <a href="/register">Not registered?</a>
      <% end %>
    </div>
  </div>
</div>